{
    "manifest_version": 3,
    "name": "Lightspeed Workorder Helper",
    "version": "1.0.0",
    "description": "Chrome extension to enhance Lightspeed Retail workorders",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://us.merchantos.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://us.merchantos.com/*"],
        "js": ["contentScript.js"],
        "run_at": "document_end"
      }
    ]
  }